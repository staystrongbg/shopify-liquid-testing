
{% if search.performed %}
    <h1>Search result</h1>
    {% for result in search.results %}
        {% if result.object_type == "page" %}
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% elsif result.object_type == "article" %}
                <a href="{{ result.url }}">{{ result.title }} </a>
            {% else %}
            {% render 'product-item' %}
        {% endif %}
    {% endfor %}
    {% else %}
        <h1>try searching for something</h1>
{% endif %}