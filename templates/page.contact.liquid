<h1>{{ page.title   }}</h1>

<div>
    {{ page.content }}
</div>

{% form 'contact' %}
    {{ form.errors | default_errors }}

    <div class="email">
      <input type="email" name="contact[email]" placeholder="email"/>
    </div>

  
    <div class="message">
      <textarea name="contact[body]"  placeholder="message"  ></textarea>
    </div>
  
    <div class="submit">
      <input type="submit" value="Send" />
    </div>
  {% endform %}
  