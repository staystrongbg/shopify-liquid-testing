<header> 
    <a href="/">
        <h1>{{shop.name}}</h1>
    </a>
    <!-- Main menu -->
<ul class="nav-links">
    {% for link in linklists.main-menu.links -%}
        <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
    </ul>
{% if settings.show_search %}
    <form action="/search">
        <input type="search" placeholder="Search" name="q">
        <button type="submit">Search</button>
    </form>
{% endif %}
</header>